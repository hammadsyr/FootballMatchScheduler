<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hammad.fifthkadesubmission">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".main.SplashScreen"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--<meta-data android:name="com.google.android.calendar.v3.API_KEY"
                   android:value="@string/google_api_key"/>-->
        <activity
            android:name=".main.MainActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".matches.MatchDetail"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".teams.TeamsDetail"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Collapse" />
        <activity
            android:name=".teams.PlayerDetail"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>